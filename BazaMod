CREATE TABLE NAGRADA(
NagradaID int NOT NULL PRIMARY KEY,
Naziv VARCHAR(100) NOT NULL,
GodinaPrveDodele int NOT NULL,
CONSTRAINT CHK_god CHECK (GodinaPrveDodele>=1923)
);

ALTER TABLE PRODUCENT ADD COLUMN Adresa_sajta VARCHAR(100);

CREATE TABLE NAGRADJEN(
FilmID smallint NOT NULL,
NagradaID int NOT NULL,
Godina_osvajanja int NOT NULL,
Festival VARCHAR(100),
CONSTRAINT FK_FilmID FOREIGN KEY (FilmID) REFERENCES FILM(FilmID),
CONSTRAINT FK_NagradaID FOREIGN KEY (NagradaID) REFERENCES NAGRADA(NagradaID)
);
